<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_cateItem_bigPic"
        android:layout_width="340dp"
        android:layout_height="211dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView_cateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="28dp"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_cateItem_bigPic"
        app:layout_constraintStart_toStartOf="@+id/imageView_cateItem_bigPic"
        tools:text="食其家" />

    <ImageView
        android:id="@+id/imageView_cateScore"
        android:layout_width="72dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_cateItem_bigPic"
        app:layout_constraintStart_toStartOf="@+id/textView_cateName"
        app:layout_constraintTop_toBottomOf="@+id/textView_cateName"
        app:srcCompat="@color/bb_darkBackgroundColor" />

    <TextView
        android:id="@+id/textView_cateScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/cardview_light_background"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_cateScore"
        app:layout_constraintStart_toEndOf="@+id/imageView_cateScore"
        app:layout_constraintTop_toBottomOf="@+id/textView_cateName"
        tools:text="4.1分" />
</android.support.constraint.ConstraintLayout>